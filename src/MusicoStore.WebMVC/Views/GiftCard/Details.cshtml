@model WebMVC.Models.GiftCard.GiftCardDetailViewModel
@{ ViewData["Title"] = "Gift Card Details"; }

<div class="container mt-4">
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Gift Card Definition #@Model.GiftCard.Id</h3>
            <span class="badge bg-light text-dark fs-4">@Model.GiftCard.Amount @Model.GiftCard.CurrencyCode</span>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-secondary">Validity</h5>
                    <p class="fs-5">
                        <i class="bi bi-calendar-event"></i> @Model.GiftCard.ValidFrom.ToShortDateString()
                        &mdash;
                        <i class="bi bi-calendar-x"></i> @Model.GiftCard.ValidTo.ToShortDateString()
                    </p>
                </div>
                <div class="col-md-6">
                    <h5 class="text-secondary">Usage Statistics</h5>
                    <p class="fs-5">
                        <span class="fw-bold">@Model.UsedCoupons</span> used / <span
                            class="fw-bold">@Model.TotalCoupons</span> generated
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Generated Coupons</h4>

        <form asp-action="GenerateCoupon" asp-route-id="@Model.GiftCard.Id" method="post">
            <button type="submit" class="btn btn-warning shadow-sm">
                <i class="bi bi-magic me-2"></i> Generate New Coupon Code
            </button>
        </form>
    </div>

    @if (!Model.GiftCard.Coupons.Any())
    {
        <div class="alert alert-info text-center py-4">
            <i class="bi bi-info-circle fs-4 d-block mb-2"></i>
            No coupons generated for this card yet. Click the button above to generate one.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                <tr>
                    <th>Code</th>
                    <th>Status</th>
                    <th>Used In Order</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var coupon in Model.GiftCard.Coupons)
                {
                    <tr class="@(coupon.OrderId.HasValue ? "table-secondary text-muted" : "")">
                        <td>
                            <span class="font-monospace fs-5 fw-bold">@coupon.CouponCode</span>
                        </td>

                        <td>
                            @if (coupon.OrderId.HasValue)
                            {
                                <span class="badge bg-secondary">Used</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active / Available</span>
                            }
                        </td>

                        <td>
                            @if (coupon.OrderId.HasValue)
                            {
                                <a asp-controller="Order" asp-action="Details" asp-route-id="@coupon.OrderId"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> View Order #@coupon.OrderId
                                </a>
                            }
                            else
                            {
                                <span class="text-muted small">&mdash;</span>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>