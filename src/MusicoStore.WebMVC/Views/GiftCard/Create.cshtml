@model WebMVC.Models.GiftCard.GiftCardCreateViewModel

@{
    ViewData["Title"] = "Create Gift Card";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Create Gift Card Definition</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Amount" class="form-label">Card Value</label>
                            <div class="input-group">
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="1" />
                                <span class="input-group-text">CZK</span>
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                            <div class="form-text">This is the discount value applied to orders.</div>
                        </div>

                        <input type="hidden" asp-for="CurrencyCode" value="CZK" />

                        <h5 class="mb-3 text-secondary border-bottom pb-2">Validity Period</h5>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ValidFrom" class="form-label">Valid From</label>
                                <input asp-for="ValidFrom" class="form-control" type="date" />
                                <span asp-validation-for="ValidFrom" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ValidTo" class="form-label">Valid To</label>
                                <input asp-for="ValidTo" class="form-control" type="date" />
                                <span asp-validation-for="ValidTo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-success">Create Definition</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}