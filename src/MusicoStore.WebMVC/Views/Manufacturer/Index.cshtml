@model IEnumerable<WebMVC.Models.Manufacturer.ManufacturerViewModel>
@{ ViewData["Title"] = "Manufacturers"; }

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manufacturers</h1>
        @if (User.IsInRole("Employee"))
        {
            <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-lg"></i> Add Manufacturer</a>
        }
    </div>

    <table class="table table-hover table-striped">
        <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>City</th>
            <th>Full Address</th>
            @if (User.IsInRole("Employee"))
            {
                <th>Actions</th>
            }
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ManufacturerId</td>
                <td>@item.Name</td>
                <td>@item.Address.City</td>
                <td>
                    <small class="text-muted">
                        @item.Address.StreetName @item.Address.StreetNumber, @item.Address.PostalNumber @item.Address.CountryCode
                    </small>
                </td>
                <td>
                    @if (User.IsInRole("Employee"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.ManufacturerId" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>