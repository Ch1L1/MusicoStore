@model IEnumerable<WebMVC.Models.Orders.OrderListViewModel>

@{
    ViewData["Title"] = "Order Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Orders</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Create New Order
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No orders found in the system.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th class="text-center">Coupon</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">#@item.OrderId</td>
                                
                                <td>
                                    @item.CreatedAt.ToLocalTime().ToString("g")
                                </td>
                                
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-circle text-secondary me-2"></i>
                                        @item.CustomerId
                                    </div>
                                </td>
                                
                                <td class="fw-bold">
                                    @item.TotalAmount.ToString("C")
                                </td>
                                
                                <td>
                                    @{
                                        string badgeClass = item.CurrentState switch
                                        {
                                            "Created" => "bg-primary",
                                            "Paid" => "bg-info text-dark",
                                            "Shipped" => "bg-warning text-dark",
                                            "Delivered" => "bg-success",
                                            "Cancelled" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass rounded-pill">@item.CurrentState</span>
                                </td>

                                <td class="text-center">
                                    @if (item.HasGiftCard)
                                    {
                                        <span class="text-success" title="Gift Card Applied">
                                            <i class="bi bi-gift-fill fs-5"></i>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted text-opacity-25">
                                            <i class="bi bi-dash-lg"></i>
                                        </span>
                                    }
                                </td>

                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-primary">
                                        Details <i class="bi bi-arrow-right"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>