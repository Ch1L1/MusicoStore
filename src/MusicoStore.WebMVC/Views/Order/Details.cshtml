@model WebMVC.Models.Orders.OrderDetailViewModel
@{ ViewData["Title"] = $"Order #{Model.Order.OrderId}"; }

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Order #@Model.Order.OrderId</h1>
        <span class="badge bg-info fs-5">@Model.Order.CurrentState</span>
    </div>

    <div class="card mb-4">
        <div class="card-body bg-light">
            <form asp-action="ChangeState" method="post" class="row g-3 align-items-center">
                <input type="hidden" name="orderId" value="@Model.Order.OrderId"/>
                <div class="col-auto">
                    <label class="col-form-label fw-bold">Change State:</label>
                </div>
                <div class="col-auto">
                    <select name="newStateId" asp-items="Model.AvailableStates" class="form-select"></select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th class="text-end">Line Total</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Order.Items != null)
        {
            foreach (var item in Model.Order.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.PricePerItem.ToString("C")</td>
                    <td class="text-end">@item.LineTotal.ToString("C")</td>
                </tr>
            }
        }
        </tbody>
    </table>

    <div class="row justify-content-end">
        <div class="col-md-5">
            <ul class="list-group">
                @{
                    var discount = Model.Order.GiftCardAmount ?? 0;
                    var subtotal = Model.Order.TotalAmount + discount;
                }

                <li class="list-group-item d-flex justify-content-between">
                    <span>Subtotal:</span>
                    <strong>@subtotal.ToString("C")</strong>
                </li>

                @if (Model.Order.GiftCardAmount.HasValue)
                {
                    <li class="list-group-item d-flex justify-content-between list-group-item-success">
                        <span>
                            <i class="bi bi-gift-fill"></i> Gift Card Applied:
                            <br>
                            <small class="text-muted fst-italic">Code: @Model.Order.GiftCardCouponCode</small>
                        </span>
                        <span class="fw-bold">-@discount.ToString("C")</span>
                    </li>
                }

                <li class="list-group-item d-flex justify-content-between bg-dark text-white">
                    <span class="fs-5">Total to Pay:</span>
                    <strong class="fs-5">@Model.Order.TotalAmount.ToString("C")</strong>
                </li>
            </ul>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Orders</a>
    </div>
</div>